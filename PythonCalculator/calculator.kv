<MyRoot>


	calculator_field: calculator_field

	orientation: 'vertical'
	TextInput:
		id: calculator_field
		height: 200
		size_hint: (1, None)
		readonly: True
		disabled: True
		font_size: 64
	GridLayout:
		rows: 5
		columns: 4
		padding: 10
		spacing: 10
		height: 400
		size_hint: (1, None)
		
		Button:
			text: "AC"
			font_size: 20
			on_press: root.clear()
		Button:
			text: "<x|"
			font_size: 20
			on_press: root.delete()
		Button:
			text: "%"
			font_size: 20
			on_press: root.calculator_symbol('%')
		Button:
			text: "/"
			font_size: 20
			on_press: root.calculator_symbol('/')
		Button:
			text: "7"
			font_size: 20
			on_press: root.calculator_symbol('7')
		Button:
			text: "8"
			font_size: 20
			on_press: root.calculator_symbol('8')
		Button:
			text: "9"
			font_size: 20
			on_press: root.calculator_symbol('9')
		Button:
			text: "x"
			font_size: 20
			on_press: root.calculator_symbol('*')
		Button:
			text: "4"
			font_size: 20
			on_press: root.calculator_symbol('4')
		Button:
			text: "5"
			font_size: 20
			on_press: root.calculator_symbol('5')
		Button:
			text: "6"
			font_size: 20
			on_press: root.calculator_symbol('6')
		Button:
			text: "-"
			font_size: 20
			on_press: root.calculator_symbol('-')
		Button:
			text: "1"
			font_size: 20
			on_press: root.calculator_symbol('1')
		Button:
			text: "2"
			font_size: 20
			on_press: root.calculator_symbol('2')
		Button:
			text: "3"
			font_size: 20
			on_press: root.calculator_symbol('3')
		Button:
			text: "+"
			font_size: 20
			on_press: root.calculator_symbol('+')
	
		
	BoxLayout:
		orientation: 'horizontal'
		padding: 7
		spacing: 7
		height: 100
		size_hint:(1, None)

		Button:
			text: "0"
			font_size: 20
			on_press: root.calculator_symbol('0')
		Button:
			text: "."
			font_size: 20
			on_press: root.calculator_symbol('.')
		Button:
			text: "="
			font_size: 20
			on_press: root.get_result()

</MyRoot>